<!DOCTYPE html>
<html>
  <head>
    <title>MississippiRecords</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-sm-3">
          <ul>
            <li><%= current_user.username if current_user %></li>
            <li>Link</li>
            <li>Link</li>
            <li>Link</li>
            <li><%= link_to "Log Out", destroy_user_session_path, :method => "delete" %></li>
          </ul>
        </div>
        <div class="col-sm-9">
          <% if flash[:notice] %>
            <p class="notice"><%= flash[:notice] %></p>
          <% end %>
          <% if flash[:alert] %>
            <p class="alert"><%= flash[:alert] %></p>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
