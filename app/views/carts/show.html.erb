<% if @order_items.any? %>
  <% @order_items.each do |item| %>
    <p><%= item.album.title %> | <%= link_to "Delete", order_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Unit Price: <%= number_to_currency item.album.price %> | Quantity: <%= item.quantity %> | Total Price: <%= number_to_currency (item.album.price * item.quantity) %></p>
  <% end %>
  <p>Your Total: <%= number_to_currency current_order.total_price %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
